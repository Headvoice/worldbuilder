@model HomeBrewManager.Models.HomeBrew
@{
    ViewBag.Title = "HomeBrewsForm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>New Homebrew</h2>

@using (Html.BeginForm("Save", "HomeBrews"))
{
    <div class="form-group">
        @Html.LabelFor(m => m.Name)
        @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.DescriptionForPlayers)
        @Html.TextBoxFor(m => m.DescriptionForPlayers, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.GameMasterNotes)
        @Html.TextBoxFor(m => m.GameMasterNotes, new { @class = "form-control" })
    </div>

    @Html.HiddenFor(m => m.Id)
    @Html.HiddenFor(m => m.HomeBrewUserId)

    <button type="submit" class="btn btn-primary">Save</button>

}

