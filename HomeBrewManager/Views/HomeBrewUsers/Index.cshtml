@model IEnumerable<HomeBrewManager.Models.HomeBrewUser>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

@if (!Model.Any())
{
    <p>No users yet.</p>
}
else
{
    <table class="table table-bordered">
        @*<tr>
            <th>Name</th>
            <th>Account Details</th>
            <th>Homebrews</th>
        </tr>*@
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Name</td>
                <td>@Html.ActionLink("Account", "Details", "HomeBrewUsers", new { id = user.Id }, null)</td>

                <td>@Html.ActionLink("Homebrews", "foruser", "HomeBrews", new { userid = user.Id }, null)</td>

            </tr>
        }
    </table>
}